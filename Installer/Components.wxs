<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

	<!-- Command Line Tool -->
	<Fragment>

		<ComponentGroup Id="CommandLineComponents">
			<ComponentRef Id="Console"/>
			<ComponentRef Id="ConsoleLogConfig"/>
			<ComponentRef Id="ProPinballSlave"/>
			<ComponentRef Id="Path"/>
		</ComponentGroup>

		<DirectoryRef Id="INSTALLFOLDER" FileSource="$(var.Console.TargetDir)">
			<Component Id="Console" Guid="{CAA01C63-A6C4-47A7-A803-E0EE97319062}">
				<File Id="DmdExt" Name="dmdext.exe" KeyPath="yes"/>
			</Component>
			<Component Id="ConsoleLogConfig" NeverOverwrite="yes" Guid="{7FAB5DED-3880-43AA-AD2D-CAE0AD49C902}">
				<File Id="DmdExtLogConfig" Name="dmdext.log.config" KeyPath="yes"/>
			</Component>
		</DirectoryRef>

		<DirectoryRef Id="TARGETDIR">
			<Component Id="Path" Guid="{AE6A7F21-7334-4B4C-84FE-973380C7F66F}">
				<Environment Id="PATH" Name="PATH" Value="[INSTALLFOLDER]" Permanent="no" Part="last" Action="set" System="yes" />
				<?if $(var.Platform)=x64?>
					<Condition><![CDATA[VersionNT=VersionNT64]]></Condition>
				<?else?>
					<Condition><![CDATA[VersionNT<>VersionNT64]]></Condition>
				<?endif?>
			</Component>
		</DirectoryRef>

	</Fragment>

	<!-- Pro Pinball Launcher -->
	<Fragment>
		<ComponentGroup Id="ProPinballLauncherComponents">
			<ComponentRef Id="ProPinballSlave"/>
		</ComponentGroup>

		<DirectoryRef Id="PROPINBALLFOLDER" FileSource="$(var.Console.ProjectDir)">
			<Component Id="ProPinballSlave" Guid="{9AD7034F-F5AC-4326-86DC-B5E941C06B96}">
				<File Id="ProPinballSlaveFile" Name="ProPinballSlave.bat" KeyPath="yes"/>
			</Component>
		</DirectoryRef>
	</Fragment>

	<!-- DmdDevice -->
	<Fragment>
		<ComponentGroup Id="DmdDeviceComponents">
			<ComponentRef Id="DmdDevice"/>
			<ComponentRef Id="DmdDeviceConfig"/>
		</ComponentGroup>

		<DirectoryRef Id="VPMFOLDER" FileSource="$(var.PinMameDevice.TargetDir)">
			<Component Id="DmdDevice" Guid="{7BE69575-CC08-444B-A2D0-FD3FF966F26A}">
				<?if $(var.Platform)=x64?>
					<File Id="DmdDeviceDll" Name="DmdDevice64.dll" KeyPath="yes"/>
				<?else?>
					<File Id="DmdDeviceDll" Name="DmdDevice.dll" KeyPath="yes"/>
				<?endif?>
			</Component>
		</DirectoryRef>

		<DirectoryRef Id="VPMFOLDER" FileSource="$(var.PinMameDevice.ProjectDir)">
			<Component Id="DmdDeviceConfig" NeverOverwrite="yes" Permanent="yes" Guid="{03203DEE-F83A-468A-802E-7D2E4279EC42}">
				<File Id="DmdDeviceIni" Name="DmdDevice.ini" KeyPath="yes"/>
			</Component>
		</DirectoryRef>

	</Fragment>

</Wix>
